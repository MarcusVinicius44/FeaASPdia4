@page
@model SejaModel
@{
    ViewData["Title"] = "Contato";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fale Conosco</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Reem+Kufi:wght@400;700&display=swap">
    <link rel="stylesheet" href="~/css/app.css">
    <link rel="stylesheet" href="~/css/Seja.css">
</head>
<body>

    <div class="ctt">
        <h2 class="mb-4">Seja Parceiro</h2>

        <form id="contatoForm" method="post">
            <div class="form-group Nome">
                <label for="NomeEmpresa">Nome da empresa:</label>
                <input type="text" name="Parceiros.NomeEmpresa" class="form-control" id="nome" placeholder="Digite o nome da empresa...">
            </div>

            <div class="form-group Email">
                <label for="EmailEmpresa">Email:</label>
                <input type="email" name="Parceiros.EmailEmpresa" class="form-control" id="email" placeholder="Digite o email da empresa...">
            </div>

            <div class="form-group Telefone">
                <label for="telefoneEmpresa">Telefone:</label>
                <input type="number" name="Parceiros.telefoneEmpresa" class="form-control" id="telefone" placeholder="Digite o telefone da empresa...">
            </div>
            <div class="form-group CNPJ">
                <label for="CNPJ">CNPJ:</label>
                <input type="number" name="Parceiros.CNPJ" placeholder="Digite o CNPJ da empresa..." />
            </div>
             <div class="form-group Bairro">
                 <label for="CEP">CEP:</label>
                <input type="type" name="Parceiros.CEP" placeholder="Digite o CEP da empresa..." />
             </div>
            <div class="form-group Mensagem">
                <label for="msgparceiro">Motivação para parceria:</label>
                <textarea class="form-control" name="Parceiros.msgparceiro" id="mensagem" rows="3" placeholder="Digite sua mensagem:"></textarea>
            </div>

            <button type="submit" class="btn btn-primary ctt-custom">Enviar</button>
        </form>
    </div>
    <script>
        document.getElementById('contatoForm').addEventListener('submit', function () {
            alert('Seu pedido de cadastro foi enviado! Aguarde retorno via email!');
        });
    </script>

</body>
</html>
